<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backGroundMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <GridLayout
            android:id="@+id/layout1st"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:columnCount="3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/test_size"
                android:layout_width="@dimen/liveItemWidth"
                android:layout_height="@dimen/liveItemHeight"
                android:background="@drawable/live_view_item"
                android:layout_margin="@dimen/liveItemMargin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1ch"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="36Â°C"
                    android:textSize="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_log"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@color/sideSelected"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_correction"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@color/sideSelected"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </GridLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>